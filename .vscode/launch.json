{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Playwright Tests",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "/Users/ridwanarifiandi/.nvm/versions/node/v23.4.0/bin/npx",
            "runtimeArgs": [
                "playwright",
                "test",
                "--debug",
                "${file}"
            ],
            "skipFiles": ["<node_internals>/**"],
            "cwd": "${workspaceFolder}/playwright-playground",
            "console": "integratedTerminal",
            "env": {
                "PATH": "${env:PATH}"
            }
        }
    ]
}